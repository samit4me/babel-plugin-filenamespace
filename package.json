{
  "name": "babel-plugin-filenamespace",
  "version": "4.0.0",
  "description": "Use file structure to namespace your code.",
  "main": "lib/index.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production babel src --out-dir lib --ignore 'src/**/*.spec.js','src/**/*.test.js'",
    "clean": "rimraf lib coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "prepare": "npm run clean && npm run build",
    "lint": "eslint . --ignore-path .gitignore --ignore-pattern testFixtures",
    "test": "npm run prepare && npm run lint && jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/samit4me/babel-plugin-filenamespace.git"
  },
  "keywords": [
    "action types",
    "babel",
    "babel-plugin",
    "ddd",
    "domain driven design",
    "module",
    "namespace",
    "namespacing",
    "redux",
    "storybook",
    "test",
    "type",
    "filename",
    "dirname"
  ],
  "author": "Samuel Sharpe",
  "license": "MIT",
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/*.test.[tj]s?(x)"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/src/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.6.2",
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^27.2.4",
    "coveralls": "^3.0.6",
    "cross-env": "^6.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.24.2",
    "jest-cli": "^27.2.4",
    "rimraf": "^3.0.0"
  }
}
